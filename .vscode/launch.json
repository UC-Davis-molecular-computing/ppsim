{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug with Cython",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CYTHON_TRACE": "1",
                "CYTHON_TRACE_NOGIL": "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "Python: Debug CRN Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/crn_script.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CYTHON_TRACE": "1",
                "CYTHON_TRACE_NOGIL": "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "Python: Debug Cython Test Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_cython_debug.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CYTHON_TRACE": "1",
                "CYTHON_TRACE_NOGIL": "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
